{
    "extends": "tslint-config-airbnb",
    "rules": {
        "ter-indent": [true, 4],
        "trailing-comma": [true, {"multiline": "never", "singleline": "never"}],
        "no-increment-decrement": [false],
        "max-line-length": [true, 120]
    },
    "linterOptions": {
        "exclude": [
            "node_modules/**"
        ]
    }
}
